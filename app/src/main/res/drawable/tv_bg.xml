<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="300dp"
                    android:width="450dp" />
            <solid android:color="#ebe6e6" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:top="@dimen/bg_padding"
            android:bottom="@dimen/bg_padding"
            android:left="@dimen/bg_padding"
            android:right="@dimen/bg_padding">
        <shape android:shape="rectangle">
            <solid android:color="#f8f0ac" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>