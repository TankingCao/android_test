<?xml version="1.0" encoding="utf-8"?>
<!--
    layer-list 在 Android 中就像图层一样工作。它包含一系列的 item，每个 item 都可以是一个 Drawable。这些 Drawable 会按照它们在 XML 文件中的顺序进行绘制，也就是说，先定义的 Drawable 将被绘制在底层，后定义的 Drawable 将被绘制在上层
-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:top="0dp"
            android:start="0dp">
        <shape>
            <solid android:color="@color/red" />
        </shape>
    </item>
    <item
            android:top="50dp"
            android:start="50dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/green" />
        </shape>
    </item>
    <item
            android:top="100dp"
            android:start="100dp">
        <shape>
            <solid android:color="@color/blue" />
        </shape>
    </item>
    <item
            android:top="150dp"
            android:start="150dp">
        <shape android:shape="oval">
            <solid android:color="@color/yellow" />
        </shape>
    </item>

</layer-list>